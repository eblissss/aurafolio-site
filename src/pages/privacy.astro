---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import site from "../config/site";
import "../styles/theme.css";
import "../styles/utilities.css";
import "../styles/global.css";
import "../styles/buttons.css";
import { readFileSync } from "fs";
import { marked } from "marked";

const md = readFileSync(new URL("../../privacy.md", import.meta.url), "utf-8");
const html = marked.parse(md);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Privacy Policy â€” {site.title}</title>
    <meta name="description" content={site.description} />
    <meta name="robots" content="noindex,follow" />
    <link rel="canonical" href="https://aurafolio.net/privacy" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content={site.themeColor} />
  </head>
  <body>
    <main class="container top-container">
      <Header />

      <main class="container">
        <section class="card mt-6 mb-8 p-8">
          <div class="prose max-w-4xl mx-auto" set:html={html} />
        </section>
      </main>

      <Footer />
    </main>
  </body>
</html>
