---
import { Image } from "astro:assets";

import MainWide from "../images/MainWide.png";
import SheetWide from "../images/SheetWide.png";
import GridTall from "../images/GridTall.png";
import ListTall from "../images/ListTall.png";
import SetlistTall from "../images/SetlistTall.png";

const topShots = [
    {
        src: SheetWide,
        alt: "AuraFolio main library view",
    },
    {
        src: MainWide,
        alt: "AuraFolio sheet music viewer",
    },
];

const bottomShots = [
    {
        src: GridTall,
        alt: "AuraFolio grid view",
    },
    {
        src: ListTall,
        alt: "AuraFolio list view",
    },
    {
        src: SetlistTall,
        alt: "AuraFolio setlist management",
    },
];
---

<section class="section" id="screenshots">
    <div class="container">
        <div class="text-center mb-12">
            <h2>AuraFolio. Beautiful. Effortless.</h2>
            <p class="text-muted mt-3 max-w-2xl mx-auto">
                Get a closer look at AuraFolio's clean and intuitive interface.
            </p>
        </div>

        <div class="screenshots-grid">
            <!-- Top row: 2 horizontal screenshots -->
            <div class="screenshots-row-top">
                {
                    topShots.map((s) => (
                        <div class="hero-card screenshot-card">
                            <Image src={s.src} alt={s.alt} loading="lazy" />
                        </div>
                    ))
                }
            </div>

            <!-- Bottom row: 3 vertical screenshots -->
            <div class="screenshots-row-bottom">
                {
                    bottomShots.map((s) => (
                        <div class="hero-card screenshot-card">
                            <Image src={s.src} alt={s.alt} loading="lazy" />
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>
